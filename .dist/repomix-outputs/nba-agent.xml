            "player_ids[]": [player_id],
            "seasons[]": [season],
            "per_page": 100
        }
        headers = {"Authorization": self.api_key}
        
        try:
            async with httpx.AsyncClient() as client:
                response = await client.get(url, params=params, headers=headers)
                response.raise_for_status()
